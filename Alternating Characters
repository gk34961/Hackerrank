import java.util.*;
public class Test{
    public static void main(String ar[]){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        sc.nextLine();
        int count=0;
        
        for(int i=0;i<n;i++){
            count=0;
            String s=sc.nextLine();
            for(int j=0;j<s.length()-1;j++){
                if(s.charAt(j)==s.charAt(j+1))
                    count++;
            }
            System.out.println(count);
        }
    }
}
